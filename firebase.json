{
  "database": {
    "rules": "./Firebase/database.rules.json"
  },
  "firestore": {
    "rules": "./Firebase/firestore.rules.json",
    "indexes": "./Firebase/indexes.json"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint"
      ]
    }
  ],
  "storage": {
    "rules": "./Firebase/storage.rules.json"
  }
}
